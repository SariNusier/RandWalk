<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randwalk.game" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.randwalk.game.StartActivity"
            android:label="@string/title_activity_start"
            android:screenOrientation="portrait" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.randwalk.game.MainActivity"
            android:label="Random Walk"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.randwalk.game.Level1Activity"
            android:label="@string/title_activity_level1"
            android:parentActivityName="com.randwalk.game.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randwalk.game.MainActivity" />
        </activity>
        <activity
            android:name="com.randwalk.game.Level2Activity"
            android:label="@string/title_activity_level2"
            android:parentActivityName="com.randwalk.game.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randwalk.game.MainActivity" />
        </activity>
        <activity
            android:name="com.randwalk.game.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.randwalk.game.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randwalk.game.MainActivity" />
        </activity>
        <activity
            android:name="com.randwalk.game.Level2Animation"
            android:label="@string/title_activity_level2_animation"
            android:parentActivityName="com.randwalk.game.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randwalk.game.MainActivity" />
        </activity>
    </application>

</manifest>
