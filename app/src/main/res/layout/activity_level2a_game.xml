<com.randwalk.game.newgame.level2.views.Level2bMainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.randwalk.game.newgame.level2.activities.Level2aGameActivity"
    android:background="@color/level2_game_background"
    android:id="@+id/level2a_mainlayout">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/level2a_components_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/level2a_middle_layout">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level2a_left_view"
                android:layout_marginTop="20dp">
                <View
                    android:id="@+id/level2a_mithcondria_view1"
                    android:layout_width="50dp"
                    android:layout_height="105dp"
                    android:background="@drawable/mithocondria2"
                    android:onClick="showMithocondria"
                    android:layout_marginLeft="5dp" />
                <View
                    android:id="@+id/level2a_lysosomes_view1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level2a_mithcondria_view1"
                    android:background="@drawable/lysosomes"
                    android:layout_marginLeft="10dp"
                    android:onClick="showLysosomes"
                    android:layout_marginTop="10dp" />
                <View
                    android:id="@+id/level2a_vacuole_view"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/level2a_lysosomes_view1"
                    android:background="@drawable/vacuole"
                    android:onClick="showVacuole" />
                <View
                    android:id="@+id/level2a_lysosomes_view2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level2a_vacuole_view"
                    android:background="@drawable/lysosomes"
                    android:layout_marginLeft="5dp"
                    android:onClick="showLysosomes"
                    android:layout_marginTop="10dp" />
                <View
                    android:id="@+id/level2a_lysosomes_view3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level2a_lysosomes_view2"
                    android:background="@drawable/lysosomes"
                    android:layout_marginLeft="45dp"
                    android:onClick="showLysosomes" />
                <View
                    android:id="@+id/level2a_endopl_view"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/level2a_lysosomes_view3"
                    android:background="@drawable/endopl"
                    android:onClick="showEndopl" />
            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:src="@drawable/start_surface_2"
                android:id="@+id/level2a_startarea_view"
                android:scaleType="centerCrop"
                android:layout_marginBottom="5dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level2a_right_view"
                android:layout_marginTop="20dp">

                <View
                    android:id="@+id/level2a_mithcondria_view2"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:background="@drawable/mithocondria"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="false"
                    android:onClick="showMithocondria"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp" />
                <View
                    android:id="@+id/level2a_perixosome_view1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level2a_mithcondria_view2"
                    android:background="@drawable/perixosome"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:onClick="showPerixosome" />
                <View
                    android:id="@+id/level2a_lysosomes_view4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level2a_perixosome_view1"
                    android:background="@drawable/lysosomes"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="25dp"
                    android:onClick="showLysosomes" />
                <View
                    android:id="@+id/level2a_perixosome_view2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level2a_lysosomes_view4"
                    android:background="@drawable/perixosome"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="55dp"
                    android:onClick="showPerixosome" />
                <View
                    android:id="@+id/level2a_golgi_view"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/level2a_perixosome_view2"
                    android:background="@drawable/golgi"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="45dp"
                    android:onClick="showGolgi" />
            </RelativeLayout>
            </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/level2a_nucleous_view"
            android:visibility="invisible"
            android:id="@+id/level2a_progressbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level2a_nucleous_view"
            android:background="@drawable/nucleous"
            android:orientation="vertical"
            android:layout_below="@id/level2a_middle_layout"
            android:layout_alignParentEnd="false"
            android:onClick="showNucleous"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dna_l"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:onClick="showDNA"
                android:id="@+id/level2a_dna_left_view" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dna_c"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:onClick="showDnaPromoter"
                android:id="@+id/level2a_dna_mid_view" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dna_r"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:onClick="showDNA"
                android:id="@+id/level2a_dna_right_view" />
            </LinearLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/level2a_guide_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@drawable/level1_guideshape"/>
        <TextView
            android:id="@+id/level2a_end_guide_textview"
            android:text="@string/level2a_endText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="@drawable/level1_guideshape"
            android:layout_marginTop="10dp" />
        </RelativeLayout>
     <com.randwalk.game.newgame.level2.views.Level2aPathView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/level2a_path_view" />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/animation_frame_17"
         android:id="@+id/level2a_intro_layout">

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/level2a_intro_textview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="15dp"
                 android:textSize="20sp"
                 android:textColor="#ffffff"
                 android:autoLink="web"
                 android:text="@string/level2A_text"/>
         </ScrollView>

         <Button
             android:id="@+id/level2a_intro_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/ic_action_forward"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:onClick="nextIntro" />

     </RelativeLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/level2_line_view"
         android:visibility="gone">
         <View
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="5" />
         <View
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/splitline"
             android:layout_weight="9.7" />
         <View
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="5" />
     </LinearLayout>



</com.randwalk.game.newgame.level2.views.Level2bMainLayout>

