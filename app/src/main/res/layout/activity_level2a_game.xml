<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.randwalk.game.newgame.level2.activities.Level2aGameActivity"
    android:background="@color/Level2"
    android:id="@+id/level2a_mainlayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/level2a_components_layout">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/start_surface_2"
            android:layout_weight="22" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.01">
                <View
                    android:id="@+id/level2a_mithcondria_view1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/mithocondria"/>
                <View
                    android:id="@+id/level2a_lysosomes_view1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/level2a_mithcondria_view1"
                    android:background="@drawable/lysosomes"/>
                <View
                    android:id="@+id/level2a_vacuole_view"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/level2a_lysosomes_view1"
                    android:background="@drawable/vacuole"/>
                <View
                    android:id="@+id/level2a_lysosomes_view2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/level2a_vacuole_view"
                    android:background="@drawable/lysosomes"/>
                <View
                    android:id="@+id/level2a_lysosomes_view3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/level2a_lysosomes_view2"
                    android:background="@drawable/lysosomes"
                    android:layout_marginLeft="45dp" />
                <View
                    android:id="@+id/level2a_endopl_view"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/level2a_lysosomes_view3"
                    android:background="@drawable/endopl"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mithocondria"/>
                </RelativeLayout>
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nucleous"
            android:layout_weight="18" />

        </LinearLayout>
</RelativeLayout>
